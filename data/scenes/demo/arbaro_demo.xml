                <param type="rotation" key="rotation">
                    <rot axis="x" angle_deg="90" />
                </param>
            </filter>
            <filter type="translate">
                <param type="vec3" key="offset" value="-10;15;0" />
            </filter>
            <filter type="scale">
                <param type="double" key="scale" value="0.5" />
            </filter>
        </part>
    </scene>
</document>
